#text-canvas {
  position: absolute;
  height: 100%;
  width: 100%;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  margin-bottom: 2px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.hide {
  display: none;
}

.show {
  display: flex;
}

.section-input {
  padding: 15rpx;
  border: 1px solid white;
  border-radius: 20px;
  border-color: white;
  color: white;
}

.section-image {
  margin-left: 20px;
  width: 2.2rem;
  height: 2.2rem;
}

.setting-box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100000;
  background: #3c3c3c;
  padding-top: 20rpx;
}

.setting-title {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.setting-content {
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.setting-content-color {
  width: 60rpx;
  height: 60rpx;
}

.color-on {
  width: 70rpx;
  height: 70rpx;
}

.setting-content-size {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #6c6c6c;
  margin: 10px;
  text-align: center;
  color: white;
  border-radius: 5px;
}

.size-on {
  background-color: #adadad;
}

.setting-title-itme {
  color: #adadad;
  text-align: center;
  margin: 10px;
  font-size: 15px;
}

.setting-item-on {
  color: white;
  font-size: 20px;
}

.div-line {
  background: #6c6c6c;
  width: 100%;
  height: 3rpx;
}
