}

#text-canvas {
  position: absolute;
  height: 100%;
  width: 100%;
}

.bottom {
  flex-direction: row;
  justify-content: center;
}

.hide {
  display: none;
}

.show {
  display: flex;
}

.section-input {
  height: 5%;
  padding: 16rpx;
  /* display: flex; */
